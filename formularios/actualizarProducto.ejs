<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Actualizar Producto</title>
    <%- include("fragmentos/head") -%>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<header>
    <%- include('../formularios/fragmentos/header.ejs'); -%>
</header>

<body>

    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Actualizar Producto</h3>
                    </div>
                    <div class="card-body">
                        <form action="/actualizarProducto/<%= productodb.id %>?_method=PUT" , method="POST"
                            onsubmit="return confirmacion();">
                            <div class="form-group">
                                <div style="color: darkgrey;">ID Producto</div>
                                <input type="text" id="idProducto" name="id" placeholder="Ingrese el ID"
                                    class="form-control" readonly /><br>
                            </div>
                            <div class="form-group">
                                <div style="color: darkgrey;">Nombre Producto</div>
                                <input type="text" id="nombreProducto" name="nombreProducto"
                                    placeholder="Ingrese el nombre del producto" class="form-control" required /><br>
                            </div>
                            <div class="form-group">
                                <div style="color: darkgrey;">Precio</div>
                                <input type="text" id="precioProducto" name="precio"
                                    placeholder="Ingrese el precio del producto" class="form-control" required /><br>
                            </div>
                            <div class="form-group">
                                <div style="color: darkgrey;">Cantidad</div>
                                <input type="number" id="cantidadProducto" name="cantidad"
                                    placeholder="Ingrese la cantidad del producto" class="form-control" required /><br>
                            </div>

                            <div class="form-group">
                                <div style="color: darkgrey;">Proveedor</div>
                                <select name="proveedor" id="productoProveedor" class="form-select"
                                    aria-label="Default select example" required>
                                    <% for (var i=0; i < list.length; i++){%>
                                        <option>
                                            <%= list[i].nombreProveedor %>
                                        </option>
                                        <%}%>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success" value="Actualizar" /><br>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javaScript">
        var idProducto = "<%= productodb.id %>";
        var nombreProducto = "<%= productodb.nombreProducto %>";
        var precioProducto = "<%= productodb.precio %>";
        var cantidadProducto = "<%= productodb.cantidad %>";
        var productoProveedor = "<%= productodb.proveedor %>";

        document.getElementById("idProducto").value = idProducto;
        document.getElementById("nombreProducto").value = nombreProducto;
        document.getElementById("precioProducto").value = precioProducto;
        document.getElementById("cantidadProducto").value = cantidadProducto;
        document.getElementById("productoProveedor").value = productoProveedor;
    </script>

    <script type="text/javaScript">
    function confirmacion(){
        if(window.confirm("Estas seguro de querer actualizar este producto")){
            window.alert("El producto ha sido actualizado con exito");
            return true;
        }else{
            return false;
        }
    }
    </script>


</body>

</html>